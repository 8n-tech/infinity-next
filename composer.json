{
    "name": "infinity-next/infinity-next",
    "description": "Infinity Next is an imageboard suite utilizing the Laravel framework.",
    "keywords": ["laravel", "imageboard", "4chan", "16chan", "infinity"],
    "license": "AGPL 3.0",
    "type": "project",

    "authors": [
        {
            "name": "Joshua Moon",
            "email": "josh@jaw.sh",
            "homepage": "http://jaw.sh",
            "role": "Developer"
        }
    ],

    "require": {
        "php": "^7.2",
        "ext-bcmath": "*",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^1.2",
        "laravelcollective/html": "^6.0",
        "fideloper/proxy": "^4.0",
        "fruitcake/laravel-cors": "^1.0",
        "predis/predis": "^1.1.1",
        "geoip2/geoip2": "~2.1",
        "doctrine/dbal": "^2.10",
        "infinity-next/laravel-captcha": "^1.0",
        "infinity-next/eightdown": "0.1.1.1",
        "infinity-next/sleuth": "^0.2",
        "intervention/image": "^2.5",
        "james-heinrich/getid3": "^1.9",
        "jenssegers/imagehash": "^0.6.0"
    },

    "require-dev": {
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.5",
        "symfony/css-selector": "^5.0",
        "symfony/dom-crawler": "^5.0",
        "laravel/telescope": "^3.2"
    },

    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": false,
        "github-protocols": ["https"]
    },

    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    }
}
